                                    </goals>
                                </execution>
                            </executions>
                        </plugin>-->

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18</version>
                <configuration>

                    <systemPropertyVariables>
                        <allure.issues.tracker.pattern>http://jira.com/issues/%s</allure.issues.tracker.pattern>
                        <my.test.var>ho-oh</my.test.var>

                        <phantomjs.binary.path>${basedir}/src/test/resources/drivers/phantomjs.exe
                        </phantomjs.binary.path>
                        <webdriver.chrome.driver>${basedir}/src/test/resources/drivers/chromedriver.exe
                        </webdriver.chrome.driver>
                        <webdriver.ie.driver>${basedir}/src/test/resources/drivers/IEDriverServer.exe
                        </webdriver.ie.driver>
                    </systemPropertyVariables>

                    <argLine>
                        -javaagent:${settings.localRepository}/org/aspectj/aspectjweaver/${aspectj.version}/aspectjweaver-${aspectj.version}.jar
                    </argLine>
                    <!-- No need to use it Removed explicit Allure listener notation -->
                    <!-- <properties>
                         <property>
                             <name>listener</name>
                             <value>ru.yandex.qatools.allure.testng.AllureTestListener</value>
                         </property>
                     </properties>-->

                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.aspectj</groupId>
                        <artifactId>aspectjweaver</artifactId>
                        <version>${aspectj.version}</version>
                    </dependency>
                </dependencies>
            </plugin>


